<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragements.HelpFragment"
    android:background="@color/mainDark"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="250dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We will help you in this website"
            android:gravity="center"
            android:textSize="@dimen/size_name_card"
            android:textColor="@color/textForDark"/>
        <TextView
            android:id="@+id/fg_help_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="www.cattocdi.vn"
            android:gravity="center"
            android:textSize="20dp"
            android:clickable="true"
            android:textColor="@color/textForDark"/>
    </LinearLayout>

