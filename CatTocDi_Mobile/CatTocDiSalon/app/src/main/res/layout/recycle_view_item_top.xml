<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:layout_marginBottom="@dimen/mg_top_login_page">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/fg_home_rv_item_img"
            android:background="@drawable/splash_gradient_background"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên cửa hàng"
            android:id="@+id/fg_home_rv_item_title_tv"
            android:layout_marginTop="24dp"
            android:textSize="@dimen/size_name_shop"
            android:textColor="@color/textForLight"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quận 1, Nguyễn Huệ"
            android:id="@+id/fg_home_rv_item_address_tv"
            android:textSize="@dimen/size_name_shop"
            android:textColor="@color/textForLight"
            android:layout_marginTop="8dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="3"
                android:numStars="5"
                android:stepSize="0.5"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:progressTint="@color/secondLight"
                android:secondaryProgressTint="@color/textLogin"
                android:id="@+id/fg_home_rv_item_rb"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(30)"
                android:id="@+id/fg_home_rv_item_amount_review_tv"
                android:textSize="@dimen/size_name_shop"
                android:textColor="@color/textForLight"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>