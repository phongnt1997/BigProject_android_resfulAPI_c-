<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:stateListAnimator="@drawable/click_effect_btn"
    android:layout_marginHorizontal="6dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/fg_home_rv_item_img" />

        <ImageView
            android:id="@+id/fg_home_rv_item_favorite_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_border"
            android:layout_marginRight="8dp"
            android:layout_below="@id/fg_home_rv_item_img"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_below="@id/fg_home_rv_item_img"
            android:id="@+id/fg_home_rv_item_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Cửa hàng 1"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fg_home_rv_item_address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fg_home_rv_item_title_tv"
            android:layout_marginLeft="4dp"
            android:text="Quận 1, Nguyễn Huệ"
            android:textSize="14dp" />


        <RatingBar
            android:id="@+id/fg_home_rv_item_rb"
            android:layout_below="@id/fg_home_rv_item_address_tv"
            style="@style/RatingSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:numStars="5"
            android:progressTint="@color/secondLight"
            android:rating="3"
            android:secondaryProgressTint="@color/textLogin"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/fg_home_rv_item_amount_review_tv"
            android:layout_below="@id/fg_home_rv_item_address_tv"
            android:layout_toRightOf="@id/fg_home_rv_item_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(30)"
            />


        <TextView
            android:id="@+id/rv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/fg_home_rv_item_img"
            android:background="#AA000000"
            android:padding="8dp"
            android:text="50% OFF"
            android:textColor="@color/textForDark"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>