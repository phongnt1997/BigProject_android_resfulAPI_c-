<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListSalonActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_list_salon_title_tv"
        android:layout_marginVertical="12dp"
        android:textSize="16dp"
        android:textColor="@color/textForLight"
        android:gravity="center"
        android:text="title here"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_list_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <android.support.design.widget.FloatingActionButton
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/btOpenMap"
            android:layout_margin="10dp"
            app:fabSize="normal"
            android:backgroundTint="#341746"
            app:fabCustomSize="64dp"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="#341746"
            android:src="@drawable/ic_circle_map"
            android:elevation="8dp" />
    </RelativeLayout>




</LinearLayout>