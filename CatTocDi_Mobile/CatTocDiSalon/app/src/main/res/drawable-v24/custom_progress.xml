<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/progress_background">
        <shape>
            <corners android:radius="8dp"></corners>
            <solid android:color="@color/textForGrey"></solid>
        </shape>
    </item>
    <item android:id="@+id/progress"
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="8dp"></corners>
                <solid android:color="@color/mainPrimary"></solid>
            </shape>
        </scale>

    </item>
</layer-list>
