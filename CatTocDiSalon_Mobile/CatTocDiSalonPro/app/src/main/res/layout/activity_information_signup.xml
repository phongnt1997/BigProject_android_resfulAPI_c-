<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InformationSignupActivity"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cập nhật thông tin"
                android:textStyle="bold"
                android:padding="12dp"
                android:textSize="14dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/darkTextColor" />

            <TextView
                android:id="@+id/activity_info_signup_save_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/light"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StyleViet Salon"
            android:textStyle="bold"
            android:textColor="@color/darkTextColor"/>

        <EditText
            android:id="@+id/signup_activity_salon_name_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="Tên tiệm của bạn"
            android:layout_weight="1"
            android:gravity="right"
            android:background="@null"
            android:textSize="16dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng chỗ"
            android:textStyle="bold"
            android:textColor="@color/darkTextColor"/>

        <EditText
            android:id="@+id/signup_activity_capacity_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="5"
            android:layout_weight="1"
            android:gravity="right"
            android:background="@null"
            android:inputType="number"
            android:textSize="16dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textStyle="bold"
            android:textColor="@color/darkTextColor"/>

        <EditText
            android:id="@+id/signup_activity_address_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="174 Phó Đức Chính, P.BìnhKhánh, TP.HCM"
            android:layout_weight="1"
            android:gravity="right"
            android:background="@null"
            android:textSize="16dp"/>


    </LinearLayout>
    <Button
        android:id="@+id/btn_get_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:clickable="true"
        android:text="Vị trí hiện tại"
        android:onClick="clickToGetCurrentLocation"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textStyle="bold"
            android:textColor="@color/darkTextColor"/>

        <EditText
            android:id="@+id/signup_activity_phone_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0913-952-190"
            android:layout_weight="1"
            android:gravity="right"
            android:background="@null"
            android:inputType="phone"
            android:textSize="16dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:textColor="@color/darkTextColor"/>

        <EditText
            android:id="@+id/signup_activity_mail_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="beautifulhair@gmai.com"
            android:layout_weight="1"
            android:gravity="right"
            android:background="@null"
            android:textSize="16dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>

</LinearLayout>