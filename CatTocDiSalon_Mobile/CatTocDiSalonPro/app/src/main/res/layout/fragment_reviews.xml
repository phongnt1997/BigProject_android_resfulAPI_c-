<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Xếp hạng"
            android:textColor="@color/darkTextColor"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/fg_reviews_sum"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="@color/ratingColor"
            android:rating="4.5"
            android:stepSize="0.5" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="5"
                android:textColor="@color/darkTextColor"
                android:textSize="14dp" />

            <RatingBar
                android:id="@+id/fg_reviews_5"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:isIndicator="true"
                android:numStars="1"
                android:progressTint="@color/ratingColor"
                android:rating="1"
                android:secondaryProgressTint="@color/primary"
                android:textAlignment="5" />

            <ProgressBar
                android:id="@+id/salon_detail_review_5_pb"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:layout_width="140dp"
                android:layout_height="8dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:max="100"
                android:progress="94"
                android:progressDrawable="@drawable/custom_progress" />

            <TextView
                android:id="@+id/salon_detail_review_5_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="right"
                android:paddingRight="104dp"
                android:text="94%"
                android:textColor="@color/darkTextColor"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="4"
                android:textColor="@color/darkTextColor"
                android:textSize="14dp" />

            <RatingBar
                android:id="@+id/fg_reviews_4"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:isIndicator="true"
                android:numStars="1"
                android:progressTint="@color/ratingColor"
                android:rating="1"
                android:secondaryProgressTint="@color/primary"
                android:textAlignment="5" />

            <ProgressBar
                android:id="@+id/salon_detail_review_4_pb"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:layout_width="140dp"
                android:layout_height="8dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:max="100"
                android:progress="6"
                android:progressDrawable="@drawable/custom_progress" />

            <TextView
                android:id="@+id/salon_detail_review_4_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="right"
                android:paddingRight="104dp"
                android:text="6%"
                android:textColor="@color/darkTextColor"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="3"
                android:textColor="@color/darkTextColor"
                android:textSize="14dp" />

            <RatingBar
                android:id="@+id/fg_reviews_3"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:isIndicator="true"
                android:numStars="1"
                android:progressTint="@color/ratingColor"
                android:rating="1"
                android:secondaryProgressTint="@color/primary"
                android:textAlignment="5" />

            <ProgressBar
                android:id="@+id/salon_detail_review_3_pb"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:layout_width="140dp"
                android:layout_height="8dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:max="100"
                android:progress="10"
                android:progressDrawable="@drawable/custom_progress" />

            <TextView
                android:id="@+id/salon_detail_review_3_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="right"
                android:paddingRight="104dp"
                android:text="0%"
                android:textColor="@color/darkTextColor"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="2"
                android:textColor="@color/darkTextColor"
                android:textSize="14dp" />

            <RatingBar
                android:id="@+id/fg_reviews_2"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:isIndicator="true"
                android:numStars="1"
                android:progressTint="@color/ratingColor"
                android:rating="1"
                android:secondaryProgressTint="@color/primary"
                android:textAlignment="5" />

            <ProgressBar
                android:id="@+id/salon_detail_review_2_pb"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:layout_width="140dp"
                android:layout_height="8dp"
                android:layout_marginLeft="32dp"
