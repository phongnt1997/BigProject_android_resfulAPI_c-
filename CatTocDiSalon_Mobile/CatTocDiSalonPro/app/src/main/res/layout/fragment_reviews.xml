                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="right"
                android:paddingRight="104dp"
                android:text="0%"
                android:textColor="@color/darkTextColor"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="1"
                android:textColor="@color/darkTextColor"
                android:textSize="14dp" />

            <RatingBar
                android:id="@+id/fg_reviews_1"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:isIndicator="true"
                android:numStars="1"
                android:progressTint="@color/ratingColor"
                android:rating="1"
                android:secondaryProgressTint="@color/primary"
                android:textAlignment="5" />

            <ProgressBar
                android:id="@+id/salon_detail_review_1_pb"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:layout_width="140dp"
                android:layout_height="8dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:max="100"
                android:progress="10"
                android:progressDrawable="@drawable/custom_progress" />

            <TextView
                android:id="@+id/salon_detail_review_1_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="right"
                android:paddingRight="104dp"
                android:text="0%"
                android:textColor="@color/darkTextColor"
                android:textSize="14dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="24dp"
            android:background="@color/primary"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/salon_detail_total_reviews_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/darkTextColor"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/salon_detail_comment_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>