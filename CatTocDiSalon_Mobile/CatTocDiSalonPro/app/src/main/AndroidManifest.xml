<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pro.salon.cattocdi">
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:launchMode="singleTop"
            android:theme="@style/SplashStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".LoginActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".SignupActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".ListAppointmentActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".AppointmentDetailActivity"
            android:launchMode="singleTop" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".PromotionActivity" />
        <activity android:name=".ServiceActivity" />
        <activity android:name=".WorkingHoursActivity" />
        <activity android:name=".InformationActivity" />
        <activity android:name=".ContactDetailActivity" />
        <activity android:name=".ServiceDetailActivity" />
        <activity android:name=".PromotionDetailActivity" />
        <activity android:name=".ReviewProfileActivity" />
        <activity android:name=".ServiceSignupActivity" />
        <activity android:name=".AddPromotionActivity" />
        <activity android:name=".WorkingHourSignupActivity" />
        <activity android:name=".InformationSignupActivity"></activity>

    </application>

</manifest>